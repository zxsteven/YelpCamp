<% include ../partials/header.ejs %>

<div class='container'>
  <div class='row'>
    <h1 class='title'><%= campground.name %></h1>
    <div id='form'>
      <form action='/campgrounds/<%= campground._id %>?_method=PUT' method='POST'>
        <div class="form-group">
          <input type="text" class="form-control" name='campground[name]' value='<%= campground.name%>'>
        </div>
        <div class="form-group">
          <input type="url" class="form-control" name='campground[image]' value='<%= campground.image%>'>
        </div>
        <div class="form-group">
          <textarea class="form-control" name='campground[description]' rows="2" value='<%= campground.description%>'></textarea>
        </div>
        <div class='form-group'>
          <button class='btn btn-lg btn-primary btn-block'>Submit!</button>
        </div>
      </form>
      <a href='/campgrounds'>Go Back!!</a>
    </div>
  </div>
</div>
  
<% include ../partials/footer.ejs %>