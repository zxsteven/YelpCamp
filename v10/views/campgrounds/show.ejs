<% include ../partials/header.ejs %>

<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <p class='lead'>YelpCamp</p>
      <div class='list-group'>
        <div class='list-group-item active'>Info 1</div>
        <div class='list-group-item'>Info 2</div>
        <div class='list-group-item'>Info 3</div>
      </div>
    </div>
      <div class=col-md-9>
        <div class='thumbnail'>
          <img class='image-responsive' src='<%= campground.image %>'>
          <div class='caption-full'>
            <h4 class='pull-right'>$9,000,000.00/night</h4>
            <h4><a><h1><%= campground.name %></h1></a></h4>
            <p><%= campground.description %></p>
            <p>
              <em>Submitted by </em><%= campground.author.username %>
            </p>
            <% if(currentUser && campground.author.id.equals(currentUser._id)){ %>
              <a  class='btn btn-xs btn-warning' href='/campgrounds/<%= campground._id %>/edit'>Edit</a>
              <form id='delete' action='/campgrounds/<%= campground._id %>?_method=DELETE' method='POST'>
                <button class='btn btn-xs btn-danger'>Delete</button>
              </form>
            <% }%>
          </div>
        </div>
        <div class='well'>
          <div class='text-right'>
            <a class='btn btn-danger' href='/campgrounds/<%= campground._id %>/comments/new'>Add new comment</a>
          </div>
          <hr>
          <% campground.comments.forEach(function(comment){ %>
          <div class='row'>
            <div class='col-md-12'>
              <strong><%= comment.author.username %></strong>
              <span class='pull-right'>10 days ago</span>
              <p>
                <%= comment.text %>
              </p>
              <% if(currentUser && comment.author._id.equals(currentUser._id)){ %>
                <a class='btn btn-xs btn-warning' 
                   href='/campgrounds/<%=campground._id %>/comments/<%=comment._id%>/edit'>
                   Edit
                </a>
                <form id='delete' action='/campgrounds/<%= campground._id %>/comments/<%=comment._id%>?_method=DELETE' method='POST'>
                  <button class='btn btn-xs btn-danger'>Delete</button>
                </form>
              <% } %>
            </div>
          </div>
          <% }) %>
        </div>
      </div>
  </div>
</div>

<% include ../partials/footer.ejs %>